<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="color-scheme" content="light dark">
		<title>CARR App
			{% block title %}{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> {% block stylesheets %}{% endblock %}{% block javascripts %}{% endblock %}
		{% block importmap %}
			{{ importmap('app') }}
		{% endblock %}
	</head>
	<body>
		<header class="container">
			<nav>
				<ul>
					<li>
						<strong>🚗 CARR App</strong>
					</li>
				</ul>
				<ul>
					<li>
						<a href="{{path('app_home')}}">Home</a>
					</li>
					<li>
						<a href="{{path('app_admin_index')}}">Manage</a>
					</li>
					<li>
						<button id="theme-toggle" aria-label="Toggle theme">🌙</button>
					</li>
				</ul>
			</nav>
		</header>
		<main class="container">
			{% form_theme form 'form_theme.html.twig' %}
			{% block body %}{% endblock %}
		</main>
		<footer class="container">
			{% block footer %}
				<p>©
					{{ "now"|date("Y") }}
					CARR App</p>
			{% endblock %}
		</footer>
		</body>
	</html>
